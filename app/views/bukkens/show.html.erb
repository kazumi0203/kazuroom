<h1>Ge</h1>
<h3>Tweet詳細</h3>
<div class="tweet">
  <p><%= @bukken.name %></p>
  <p><%= @bukken.genre %></p>
  <p><%= @bukken.about %></p>
  <p><%= @bukken.address %></p>
  <%= image_tag @bukken.image_url, size: "250x200" if @bukken.image? %>
  <p><%= @bukken.created_at %></p>
</div>
<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@bukken, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>
<%= link_to "Tweet一覧に戻る", bukkens_path %>
<%= link_to "編集する", edit_bukken_path(@bukken.id) %>